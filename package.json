{
  "name": "who-you-gonna-call",
  "version": "1.0.0",
  "description": "Ghost on-call scheduler",
  "author": "Kai Yao",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
    "format:check": "prettier --check .",
    "format:lefthook": "prettier --write",
    "format": "prettier --write .",
    "lint": "eslint",
    "migrate": "tsx ./scripts/run-migrations.ts",
    "repair-db": "tsx ./scripts/repair-database.ts",
    "resetdb": "rm -rf database/oncall_schedule.db && rm -rf database/oncall_schedule.db-shm && rm -rf database/oncall_schedule.db-wal",
    "seed": "tsx ./scripts/seed-data.ts",
    "start": "tsx ./src/index.ts",
    "test": "LOG_LEVEL=silent vitest run",
    "test:watch": "LOG_LEVEL=silent vitest",
    "test:ui": "LOG_LEVEL=silent vitest --ui",
    "test:coverage": "LOG_LEVEL=silent vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.1.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.15.0",
    "lefthook": "^1.11.16",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.15.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@googleapis/calendar": "^11.0.1",
    "@notionhq/client": "^4.0.1",
    "@slack/web-api": "^7.9.3",
    "@types/lodash-es": "^4.17.12",
    "better-sqlite3": "^12.1.1",
    "datadog-lambda-js": "11.126.0",
    "dd-trace": "5.58.0",
    "dotenv": "^17.1.0",
    "lodash-es": "^4.17.21",
    "luxon": "^3.6.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  }
}
